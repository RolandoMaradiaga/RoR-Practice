<% if @article.errors.any? %> <! -- if there are any errors */ -->
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <h4 class="alert-heading">The following errors occured </h4>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %> </li>
        <%end%>
    </ul>
</div>  
<%end%>