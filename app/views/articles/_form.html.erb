
<div class="container">
<%= form_with(model: @article, local: true) do |f|%>
<div class="form-group row">
    <%= f.label :title, class: "col-2 cold-form-label" %><br/>
    <%= f.text_field :title, class: "form-control"  %>
</div>

<div class="form-group row">
  <%= f.label :description %><br/>
  <%= f.text_area :description %> 
  </div>
<p>
<%=f.submit class: "btn btn-outline btn-lg" %>
</p>

<%end %>

<%= link_to "Cancel Edit and return",  articles_path%>
</div>