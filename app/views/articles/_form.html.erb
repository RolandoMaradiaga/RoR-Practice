
<div class="container">
<%= render 'shared/errors', obj: @article %>
<%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f|%>
<div class="form-group row">
    <%= f.label :title, class: "col-2 cold-form-label" %><br/>
    <%= f.text_field :title, class: "form-control shadow rounded"  %>
</div>

<div class="form-group row">
  <%= f.label :description %><br/>
  <%= f.text_area :description %> 
  </div>
<p>
<%=f.submit class: "btn btn-outline btn-lg" %>
</p>

<%end %>

<%= link_to "Cancel Edit and return",  articles_path%>
</div>